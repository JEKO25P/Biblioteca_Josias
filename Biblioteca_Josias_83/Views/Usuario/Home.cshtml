@{
    Layout = "~/Views/Shared/_layoutNavbar.cshtml"; // Especificar el layout
    ViewData["Title"] = "Home - Bienvenido";
    var libros = ViewBag.Libros as List<Biblioteca_Josias_83.Models.Libro>;
    var autores = ViewBag.Autores as List<Biblioteca_Josias_83.Models.Domain.Autor>;
}

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        /* Paleta de colores */
        :root {
            --primario: #539FA2;
            --secundario: #72B1A4;
            --terciario: #ABCCB1;
            --fondo: #F5F5F5;
            --suave: #FFFFFF;
            --sombra: rgba(0, 0, 0, 0.1);
        }

        body {
            background-color: var(--fondo);
            font-family: 'Arial', sans-serif;
        }

        h1, h2 {
            color: var(--primario);
            font-weight: bold;
        }

        .card {
            border: none;
            border-radius: 12px;
            box-shadow: 0px 4px 8px var(--sombra);
            transition: transform 0.3s ease, box-shadow 0.3s ease;
        }

            .card:hover {
                transform: translateY(-5px);
                box-shadow: 0px 8px 16px var(--sombra);
            }

        .card-img-top {
            border-top-left-radius: 12px;
            border-top-right-radius: 12px;
            height: 250px;
            object-fit: cover;
        }

        .card-body {
            background-color: var(--suave);
            border-bottom-left-radius: 12px;
            border-bottom-right-radius: 12px;
            padding: 20px;
        }

        .card-title {
            color: var(--primario);
            font-size: 18px;
            font-weight: bold;
            margin-bottom: 0;
        }

        .text-center {
            color: var(--primario);
        }

        .container {
            padding: 20px;
        }

        .mt-5 {
            margin-top: 3rem !important;
        }

        .mb-4 {
            margin-bottom: 1.5rem !important;
        }
    </style>
</head>
<body>
    <div class="container mt-4">
        <h1 class="text-center mb-4">Bienvenido a la Biblioteca</h1>
        <p class="text-center">Explora los libros destacados y conoce a los autores.</p>

        <!-- Sección de Libros Destacados -->
        <section class="mt-5">
            <h2 class="mb-4">Libros Destacados</h2>
            <div class="row">
                @foreach (var libro in libros)
                {
                    <div class="col-md-4 mb-4">
                        <div class="card">
                            <img src="data:image/jpeg;base64,@Convert.ToBase64String(libro.Imagen)" class="card-img-top" alt="@libro.Titulo" />
                            <div class="card-body text-center">
                                <h5 class="card-title">@libro.Titulo</h5>
                            </div>
                        </div>
                    </div>
                }
            </div>
        </section>

        <!-- Sección de Autores Destacados -->
        <section class="mt-5">
            <h2 class="mb-4">Autores Destacados</h2>
            <div class="row">
                @foreach (var autor in autores)
                {
                    <div class="col-md-4 mb-4">
                        <div class="card">
                            <img src="data:image/jpeg;base64,@Convert.ToBase64String(autor.Foto)" class="card-img-top" alt="@autor.Nombre" />
                            <div class="card-body text-center">
                                <h5 class="card-title">@autor.Nombre</h5>
                            </div>
                        </div>
                    </div>
                }
            </div>
        </section>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>